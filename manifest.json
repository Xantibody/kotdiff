{
  "manifest_version": 3,
  "name": "KotDiff",
  "version": "1.0.0",
  "description": "KingOfTime の勤怠画面に実績と期待時間の差分列を追加",
  "content_scripts": [
    {
      "matches": ["*://*.kingoftime.jp/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "kotdiff@example.com",
      "strict_min_version": "109.0"
    }
  }
}
